# ===========================================
# LICITAEVOLUTION - CONFIGURAÇÕES DE AMBIENTE
# ===========================================

# AMBIENTE
NODE_ENV=development
PORT=3001

# ===========================================
# BANCO DE DADOS MYSQL
# ===========================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=licitaevolution
MYSQL_USER=root
MYSQL_PASSWORD=root123
DATABASE_URL=mysql://root:root123@localhost:3306/licitaevolution

# Configurações de pool de conexões
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ===========================================
# REDIS - CACHE E SESSÕES
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# TTL padrão para cache (em segundos)
REDIS_DEFAULT_TTL=3600

# ===========================================
# AUTENTICAÇÃO JWT
# ===========================================
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui_com_pelo_menos_64_caracteres
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# CLAUDE AI - ANTHROPIC
# ===========================================
ANTHROPIC_API_KEY=sua_chave_anthropic_aqui
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TIMEOUT=30000

# Limites de uso
CLAUDE_DAILY_LIMIT=100
CLAUDE_MONTHLY_LIMIT=3000

# ===========================================
# SERVIDOR E URLS
# ===========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001/api

# CORS
CORS_ORIGIN=http://localhost:3000

# ===========================================
# ARQUIVOS E UPLOADS
# ===========================================
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=application/pdf,image/jpeg,image/png,image/gif
UPLOAD_DEST=uploads/

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=debug
LOG_FILE=true
LOG_CONSOLE=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===========================================
# EMAIL (OPCIONAL)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_app
EMAIL_FROM="LicitaEvolution <noreply@licitaevolution.com>"

# ===========================================
# SEGURANÇA
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Tentativas de login
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_TIME=15

# Sessões
SESSION_SECRET=sua_chave_secreta_de_sessao_aqui
SESSION_MAX_AGE=86400000

# ===========================================
# NOTIFICAÇÕES
# ===========================================
NOTIFICATION_ENABLE=true
NOTIFICATION_EMAIL=true
NOTIFICATION_SLACK_WEBHOOK=

# ===========================================
# INTEGRAÇÕES EXTERNAS
# ===========================================
# ComprasNet (Portal de Compras do Governo)
COMPRASNET_API_URL=
COMPRASNET_API_KEY=

# IBGE (para validação de CNPJs e endereços)
IBGE_API_URL=https://servicodados.ibge.gov.br/api/v1

# ViaCEP (para busca de endereços)
VIACEP_API_URL=https://viacep.com.br/ws

# ===========================================
# MONITORAMENTO
# ===========================================
MONITORING_ENABLE=true
HEALTH_CHECK_INTERVAL=30000

# APM (Application Performance Monitoring)
APM_ENABLE=false
APM_SERVER_URL=
APM_SECRET_TOKEN=

# ===========================================
# DESENVOLVIMENTO
# ===========================================
# Debug
DEBUG=licitaevolution:*

# Auto-reload
AUTO_RELOAD=true

# Seed database
AUTO_SEED=true

# ===========================================
# PRODUÇÃO
# ===========================================
# SSL
SSL_ENABLE=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Cluster
CLUSTER_ENABLE=false
CLUSTER_WORKERS=0

# Backup automático
BACKUP_ENABLE=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=30

# ===========================================
# VARIÁVEIS ESPECÍFICAS DO NEGÓCIO
# ===========================================
# Licitações
EDITAL_EXPIRY_DAYS=30
PROPOSTA_EXPIRY_DAYS=7

# Financeiro
DEFAULT_CURRENCY=BRL
TAX_RATE=0.0775

# Claude IA Especialista
CLAUDE_SPECIALIST_PROMPT_VERSION=1.0
CLAUDE_ANALYSIS_TIMEOUT=60000

# ===========================================
# PGADMIN (DESENVOLVIMENTO)
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin