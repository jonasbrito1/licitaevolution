# ===========================================
# LICITAEVOLUTION - AMBIENTE DE PRODUÇÃO
# ===========================================

NODE_ENV=production
PORT=3001

# ===========================================
# BANCO DE DADOS POSTGRESQL
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=licitaevolution
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_postgres_segura_aqui
DATABASE_URL=postgresql://postgres:sua_senha_postgres_segura_aqui@postgres:5432/licitaevolution

# Pool de conexões otimizado para produção
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_redis_segura_aqui
REDIS_DB=0

# ===========================================
# JWT
# ===========================================
JWT_SECRET=sua_chave_jwt_super_segura_de_64_caracteres_ou_mais_para_producao
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CLAUDE AI
# ===========================================
ANTHROPIC_API_KEY=sua_chave_anthropic_de_producao
ANTHROPIC_MODEL=claude-3-opus-20240229
CLAUDE_DAILY_LIMIT=500
CLAUDE_MONTHLY_LIMIT=15000

# ===========================================
# URLS
# ===========================================
FRONTEND_URL=https://app.licitaevolution.com.br
BACKEND_URL=https://api.licitaevolution.com.br
CORS_ORIGIN=https://app.licitaevolution.com.br

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=info
LOG_CONSOLE=false
LOG_FILE=true
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30d

# ===========================================
# SEGURANÇA
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
LOGIN_MAX_ATTEMPTS=3
LOGIN_LOCK_TIME=30

# ===========================================
# SSL
# ===========================================
SSL_ENABLE=true
SSL_CERT_PATH=/etc/ssl/certs/licitaevolution.crt
SSL_KEY_PATH=/etc/ssl/private/licitaevolution.key

# ===========================================
# CLUSTER
# ===========================================
CLUSTER_ENABLE=true
CLUSTER_WORKERS=0

# ===========================================
# BACKUP
# ===========================================
BACKUP_ENABLE=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=90

# ===========================================
# MONITORAMENTO
# ===========================================
MONITORING_ENABLE=true
HEALTH_CHECK_INTERVAL=60000

# ===========================================
# EMAIL
# ===========================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=sua_api_key_sendgrid
EMAIL_FROM="LicitaEvolution <noreply@licitaevolution.com.br>"

# ===========================================
# NOTIFICAÇÕES
# ===========================================
NOTIFICATION_ENABLE=true
NOTIFICATION_EMAIL=true
NOTIFICATION_SLACK_WEBHOOK=sua_webhook_url_slack