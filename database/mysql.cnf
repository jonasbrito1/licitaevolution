[mysqld]
# Configurações de Performance
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Configurações de Charset
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
skip-character-set-client-handshake

# Configurações de Conexão
max_connections = 100
max_allowed_packet = 100M
connect_timeout = 60
wait_timeout = 28800
interactive_timeout = 28800

# Configurações de Query Cache
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 2M

# Configurações de Logs
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Configurações de Segurança
local_infile = 0
bind-address = 0.0.0.0

# Configurações de MyISAM
key_buffer_size = 16M

# Configurações de Timezone
default-time-zone = '-03:00'

# Configurações SQL Mode
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4